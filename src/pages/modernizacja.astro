---
import BaseLayout from "../layouts/BaseLayout.astro";
import SubPageTopBar from "../components/SubPageTopBar.svelte";
import PageHeader from "../components/PageHeader.svelte";
import FeatureList from "../components/FeatureList.svelte";

const features = [
  {
    label: "Nowy Wygląd",
    description:
      "Odświeżamy design, poprawiamy czytelność i nadajemy stronie profesjonalny, aktualny charakter.",
  },
  {
    label: "Przyspieszamy Stronę",
    description:
      "Optymalizacja kodu i grafik sprawia, że strona działa szybciej i nie traci klientów.",
  },
  {
    label: "Bezpieczeństwo",
    description:
      "Aktualizujemy technologie, wtyczki i zabezpieczenia, dbając o stabilność i ochronę danych.",
  },
  {
    label: "SEO i Widoczność w Google",
    description:
      "Poprawiamy strukturę strony i elementy techniczne, aby Google łatwiej docierało z Twoją ofertą do klientów.",
  },
  {
    label: "Możliwość Rozbudowy",
    description:
      "Dodajemy nowe funkcje: formularze, galerie, blog, integracje czy systemy rezerwacji.",
  },
];
---

<BaseLayout
  title="Modernizacja Stron Internetowych — consmatt. Digital Studio"
  description="Odświeżamy i modernizujemy strony internetowe. Nowy design, optymalizacja wydajności, aktualizacja bezpieczeństwa, poprawa SEO i możliwość rozbudowy. Profesjonalna modernizacja z najnowszymi standardami."
  canonical="/modernizacja"
  breadcrumbTitle="Modernizacja"
>
  <div class="flex min-h-screen flex-col bg-background">
    <SubPageTopBar client:load />

    <!-- Main Content -->
    <main class="flex flex-1 flex-col px-6 pb-16">
      <!-- Header Section -->
      <header class="mb-18 mt-8 text-center">
        <PageHeader
          title="Modernizacja\nTwojej Strony"
          subtitle="Odświeżymy Twoją stronę."
        />
      </header>

      <!-- Features List -->
      <FeatureList features={features} />
    </main>
  </div>
</BaseLayout>
